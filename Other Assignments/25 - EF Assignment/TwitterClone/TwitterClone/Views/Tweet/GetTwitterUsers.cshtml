@model IEnumerable<TwitterClone.Models.FollowingAndFollowers>
<table class="table table-responsive table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullname)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullname)
            </td>
            <td>
                @{
                    if (item.followingType == "YOU_FOLLOW")
                    {
                        @Html.ActionLink("Un-Follow", "UnFollowUser", "Following", new { follower_loginUser = TempData["user_id"].ToString() + "|" + item.user_id }, htmlAttributes: new { @class = "btn btn-success" })
                    }
                }
            </td>
        </tr>
        <tr>
            <th>
                Message
            </th>
            <th>
                Tweet Date
            </th>
        </tr>
                    if (item.Mytweets!=null)
                    {
                        foreach (var twt in item?.Mytweets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => twt.message)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => twt.created)
                                </td>
                            </tr>
                            }
                        }

                    }
</table>

